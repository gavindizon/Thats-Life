<AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-opacity: 1;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.choosePathPopUpController">
